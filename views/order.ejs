<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Orders</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f8ff; /* Mengatur warna latar belakang menjadi polos (biru muda) */
            height: 100vh;
            overflow: hidden;
        }

        .content {
            margin-left: 260px; /* Menyesuaikan margin untuk sidebar */
            padding: 20px;
            color: #000000; /* Mengatur warna teks menjadi hitam */
        }
    </style>
</head>
<body>
    <%- include('./partials/navbarAdmin.ejs') %>

    <div class="content">
        <h2 class="text-center mb-4">Order List</h2>
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Order Date</th>
                    <th>Price</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example data row -->
                <% dataOrders.forEach(el => { %>
                <tr>
                    <td> <%= el.User.name %> </td>
                    <td> <%= el.Product.name %> </td>
                    <td> <%= el.quantity %> </td>
                    <td> <%= el.orderDate %> </td>
                    <td> <%= el.Product.price %> </td>
                    <td> <%= el.Product.price * el.quantity %></td>
                    <td><a href="#" class="badge bg-success">Belum Lunas</a></td>
                    <td>
                        <a href="#" class="btn btn-warning btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
