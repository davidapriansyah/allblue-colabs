<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content {
            margin-left: 220px; 
            transition: all 0.3s ease-in-out;
        }

        @media (max-width: 992px) {
            .content {
                margin-left: 0;
            }
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .table th {
            background-color: #165697;
            color: #fff;
        }
        h1 {
            margin-bottom: 20px;
            font-weight: 600;
            text-align: center;
        }
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
        .btn-edit, .btn-delete {
            font-size: 14px;
            padding: 5px 12px;
            border-radius: 25px;
            transition: all 0.3s ease-in-out;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbarAdmin.ejs') %>

    <div class="content">
        <div class="container-fluid mt-4">
            <h1 class="text-center">User List</h1>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Shipping Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        <%  dataUserProfile.forEach(el => { %>
                        <tr>
                            <td><%= el.name %> </td>
                            <td><%= el.password %> </td>
                            <td><%= el.email %> </td>
                            <td><%= el.Profile ? el.Profile.formatPhoneNumber : '-'%> </td>
                            <td><%= el.Profile?.shippingAddress || '-'%> </td>
                            
                            <td class="action-buttons">
                                <a href="/admin/users/edit/<%= el.id %>" type="button" class="btn btn-primary">Reset Password</a>
                                <a href="/admin/users/delete/<%= el.id %>" type="button" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
