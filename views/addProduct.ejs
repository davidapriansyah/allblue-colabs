<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content {
            margin-left: 220px; 
            transition: all 0.3s ease-in-out;
        }

        @media (max-width: 992px) {
            .content {
                margin-left: 0;
            }
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .table th {
            background-color: #165697;
            color: #fff;
        }
        h1 {
            margin-bottom: 20px;
            font-weight: 600;
            text-align: center;
        }
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
        .btn-edit, .btn-delete {
            font-size: 14px;
            padding: 5px 12px;
            border-radius: 25px;
            transition: all 0.3s ease-in-out;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbarAdmin.ejs') %>

    <div class="content">
        <div class="container-fluid mt-4">
            <h1 class="text-center">Add Product</h1>
            
            <% if (errors.length) { %>
                <% errors.forEach(el => { %>
                    <p style="color:red"><%= el %></p>
                <% }) %>
             
            <% } %>

            <form action="/admin/products/add" method="post" enctype="multipart/form-data">
            <!-- <form action="/admin/products/add" method="post" > -->
                <label>Name</label><br>
                <input type="text" name="name"> <br>

                
                <label>Category:</label> <br>
                <select name="CategoryId">
                    <option selected disabled>--- SELECT ---</option>
                    <% dataCategories.forEach(el => { %>
                        <option value="<%= el.id %>"><%= el.name %></option>
                    <% }) %>
                    
                    <!-- <option value="1">Ikan Air Tawar </option>
                    <option value="2">Ikan Laut </option> -->
                </select> <br>
                 

                <label>Price</label><br>
                <input type="text" name="price" ><br>
    
                <label>Stock</label><br>
                <input type="text" name="stock" > <br>
 
                <label>Image</label><br>
                <!-- <input type="text" name="imageUrl" ><br> -->
                <img src="" alt="" width="100px" height="100px">
                <input type="file" name="imageUrl" /> <br>
 
                <button type="submit">Submit</button>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
