<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Products</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .content {
            margin-left: 260px; /* Menyesuaikan margin untuk sidebar */
            padding: 20px;
            color: #000000; /* Mengatur warna teks menjadi hitam */
            overflow: hidden; /* Mencegah konten keluar dari viewport */
        }

        .table-container {
            max-height: 70vh; /* Menetapkan tinggi maksimal container tabel */
            overflow-y: auto; /* Mengaktifkan scroll pada tabel */
        }

        table {
            width: 100%; /* Membuat tabel mengisi lebar penuh */
            table-layout: fixed; /* Mengatur tabel dengan layout tetap */
        }

        th, td {
            text-align: center; /* Memusatkan teks di setiap kolom */
            vertical-align: middle; /* Memusatkan teks secara vertikal */
            padding: 10px; /* Menambah padding untuk memberi ruang di dalam sel */
        }

        th {
            background-color: #343a40; /* Warna background untuk header tabel */
            color: white; /* Warna teks untuk header tabel */
        }

        td img {
            display: block;
            margin: 0 auto; /* Memusatkan gambar */
            max-width: 100px; /* Mengatur lebar maksimal gambar */
            max-height: 100px; /* Mengatur tinggi maksimal gambar */
        }

        .btn-sm {
            padding: 5px 10px; /* Memperhalus ukuran tombol kecil */
        }
    </style>
</head>
<body>
    <%- include('./partials/navbarAdmin.ejs') %>
    
    <div class="content">
        <h2 class="text-center mb-4">Product List</h2>
        <div class="text-center mb-3">
            <a href="/admin/products/add" class="btn btn-primary">Add Product</a>
        </div>
        <div class="table-container">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Category Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% dataProducts.forEach(el => { %>
                    <tr>
                        <td> <%= el.id %> </td>
                        <td> <%= el.name %> </td>
                        <td> <%= el.Category.name %> </td>
                        <td> <%= formatRupiah(el.price) %> </td>
                        <td> <%= el.stock %> </td>
                        <td> <img src="<%= el.imageUrl %>" alt="<%= el.name %>" width="100px" height="100px"> </td>
                        <td>
                            <a href="/admin/products/edit/<%= el.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/admin/products/delete/<%= el.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
